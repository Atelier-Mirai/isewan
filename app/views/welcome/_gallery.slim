.ui.aligned.grid.mt-5
  .left.floated.left.aligned.six.wide.column
    .ui
      h2.ui.h2.header#gallery
        | 写真
  .right.floated.right.aligned.six.wide.column
    .ui
      - if logged_in?
        / = link_to "編輯", abouts_path, class: "ui primary button"

.ui.blue.segment.gallery
  -(1..29).each do |number|
    - n = sprintf("%02d", number)
    = link_to asset_path("#{n}.webp"), data: { group: "photo", modaal_desc: "Test image"}, class: "photo"
      = image_tag "#{n}_s.webp"

h2.ui.header.mt-5
  | 動画

css:
  .modaal-inner-wrapper {
    padding: 0 !important;
  }
  .modaal-video-wrap {
    margin: 10px !important;
  }


.ui.blue.segment.gallery
  - %w(2015 2016 2017day1 2017day2 2018 2019).each do |movie|
    = link_to "https://player.vimeo.com/video/142216434", data: { group: "movie", modaal_desc: "Test movie"}, class: "movie"
      = image_tag "#{movie}_s.webp"

javascript:
  $('.photo').modaal({
    type: 'image'
  });
  $('.movie').modaal({
    type: 'video'
  });
